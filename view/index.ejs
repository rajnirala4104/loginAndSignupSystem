<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#loginModal">Login</button>
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#accountModal">Account</button>

<!-- Login Account -->
<div id="loginModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Login</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div Id="loginAlerts"></div>
                <form id="loginForm" action="/">
                    <div class="form-group">
                        <label for="userLoginEmail">Email or User Name</label>
                        <input type="text" class="form-control" id="userLoginEmail" aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="userLoginPassword">Password</label>
                        <input type="password" class="form-control" id="userLoginPassword">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="stayLoginCheckBox">
                        <label class="form-check-label" for="stayLoginCheckBox">Stay Login</label>
                    </div>
                    <button type="submit" class="btn btn-primary" id="userLoginBtn">Login</button>
                </form>
                If you are new at our website
                <button type="button" data-toggle="modal" data-target="#accountModal" data-dismiss="modal">Create
                    Account</button>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<!-- account modal -->
<div id="accountModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Create Account</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">

                <form id="loginForm">
                    <div class="form-group">
                        <label for="userName">Name</label>
                        <input type="text" class="form-control" id="userName">
                    </div>
                    <div class="form-group">
                        <label for="userCreateAccountEmail">Email address</label>
                        <input type="email" class="form-control" id="userCreateAccountEmail"
                            aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>
                    <div class="form-group">
                        <label for="userCreateAccountPassword">Password</label>
                        <input type="password" class="form-control" id="userCreateAccountPassword">
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="saveDetailCheck">
                        <label class="form-check-label" for="saveDetailCheck">Save My Details For Another Time</label>
                    </div>
                    <button type="submit" class="btn btn-primary" id='userCreateAccountBtn'>Create Account</button>
                </form>
                If you have already account on our website
                <button type="button" data-toggle="modal" data-target="#loginModal" data-dismiss="modal">Login</button>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>